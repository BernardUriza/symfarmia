# Local Development Environment Variables
# Copy this file to .env.local and fill in your actual values

# Application Mode
NEXT_PUBLIC_APP_MODE=dev

# Auth0 Configuration (Development)
AUTH0_SECRET=your-dev-auth0-secret-key-here
AUTH0_BASE_URL=http://localhost:3000
AUTH0_ISSUER_BASE_URL=https://your-dev-tenant.auth0.com
AUTH0_CLIENT_ID=your-dev-client-id
AUTH0_CLIENT_SECRET=your-dev-client-secret

# Database Configuration (Development)
DATABASE_URL=postgresql://username:password@localhost:5432/symfarmia_dev

# EdgeStore Configuration (Development)
EDGE_STORE_ACCESS_KEY=your-dev-edgestore-access-key
EDGE_STORE_SECRET_KEY=your-dev-edgestore-secret-key

# Email Configuration (Development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-dev-email@gmail.com
SMTP_PASS=your-dev-app-password
EMAIL_FROM=your-dev-email@gmail.com

# API Configuration
API_BASE_URL=http://localhost:3000/api
# HuggingFace API
HUGGINGFACE_TOKEN=your-huggingface-token

# Security (CRITICAL - Must be at least 32 characters)
JWT_SECRET=your-dev-jwt-secret-key-here-minimum-32-characters-long-please-change-this

# Application Settings
APP_NAME=SYMFARMIA
APP_VERSION=0.1.0
NODE_ENV=development

# Demo Mode Settings
NEXT_PUBLIC_DEMO_MODE_ENABLED=true
DEMO_USER_EMAIL=dr.symfarmia@demo.com
DEMO_USER_PASSWORD=demo123

# Logging
LOG_LEVEL=debug