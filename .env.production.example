# Production Environment Variables
# This file should be configured in your Netlify environment variables dashboard
# DO NOT commit this file with actual values

# Application Mode
NEXT_PUBLIC_APP_MODE=production

# Netlify Environment Detection
NETLIFY=true

# Auth0 Configuration (Production)
AUTH0_SECRET=your-production-auth0-secret-key-here-64-chars-minimum
AUTH0_BASE_URL=https://your-domain.netlify.app
AUTH0_ISSUER_BASE_URL=https://your-production-tenant.auth0.com
AUTH0_CLIENT_ID=your-production-client-id
AUTH0_CLIENT_SECRET=your-production-client-secret

# Database Configuration (Production)
DATABASE_URL=postgresql://username:password@your-production-db-host:5432/symfarmia_prod

# EdgeStore Configuration (Production)
EDGE_STORE_ACCESS_KEY=your-production-edgestore-access-key
EDGE_STORE_SECRET_KEY=your-production-edgestore-secret-key

# Email Configuration (Production) 
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@gmail.com
SMTP_PASS=your-production-app-password
EMAIL_FROM=noreply@your-domain.com

# API Configuration
API_BASE_URL=https://your-domain.netlify.app/api
# HuggingFace API
HUGGINGFACE_TOKEN=your-production-hf-token

# Security (Production) - CRITICAL: Use cryptographically secure random strings
JWT_SECRET=your-production-jwt-secret-key-here-minimum-32-chars-cryptographically-secure
NEXTAUTH_SECRET=your-production-nextauth-secret-key-here-minimum-32-chars-different-from-jwt

# Application Settings
APP_NAME=SYMFARMIA
APP_VERSION=1.0.0
NODE_ENV=production

# Demo Mode Settings (Optional for production)
NEXT_PUBLIC_DEMO_MODE_ENABLED=false
DEMO_USER_EMAIL=dr.symfarmia@demo.com
DEMO_USER_PASSWORD=demo123

# Logging
LOG_LEVEL=error

# Performance Monitoring (Optional)
ENABLE_ANALYTICS=true
GOOGLE_ANALYTICS_ID=your-ga-id-here

# Security Headers
ENABLE_SECURITY_HEADERS=true

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL=3600