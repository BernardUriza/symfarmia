{
  "terminal.integrated.enablePersistentSessions": true,
  "restoreTerminals.terminals": [
    {
      "splitTerminals": [
        {
          "name": "🟢 Monitor",
          "icon": "eye",
          "color": "terminal.ansiGreen",
          "commands": ["ccusage blocks --live"]
        },
        {
          "name": "🟦 Codex",
          "icon": "book",
          "color": "terminal.ansiBlue",
          "commands": [
            "export $(grep -v '^#' .env | xargs) && codex"
          ]
        },
        {
          "name": "🟠 Dev",
          "icon": "rocket",
          "color": "terminal.ansiYellow",
          "commands": ["npm start"]
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "🛠️ E2E",
          "icon": "tools",
          "commands": ["npm run build", "npm run e2e"],
          "shouldRunCommands": false
        }
      ]
    }
  ],
  "restoreTerminals.showOnStartup": true,
  "restoreTerminals.autoRestore": true,
  "restoreTerminals.autoRestoreDelay": 1000,
  "restoreTerminals.autoRestoreOnFocusChange": true
}
