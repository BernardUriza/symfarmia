# CODEX CI/CD CONFIGURATION
# Environment variables for local CI/CD pipeline

# Auto-build settings
AUTO_BUILD_ENABLED=true
AUTO_BUILD_THRESHOLD=3
MEDICAL_CRITICAL_BUILD=true

# Performance limits
MAX_BUILD_TIME=300
MAX_MEMORY_MB=2048
MAX_BUNDLE_SIZE_MB=10

# Notification settings (optional)
BUILD_NOTIFICATIONS=true
# WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Medical validation settings
VALIDATE_MEDICAL_ROUTES=true
MEDICAL_ROUTE_TIMEOUT=5000
SERVER_PORT=3000

# Development mode
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# Cache settings
CACHE_CLEAN_ON_BUILD=true

# Test settings
RUN_TESTS_ON_BUILD=true
TEST_TIMEOUT=120

# Logging
CI_LOG_LEVEL=info
CI_COLORED_OUTPUT=true