{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "es2022"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "@/hooks/*": [
        "./hooks/*"
      ],
      "@/utils/*": [
        "./utils/*"
      ],
      "@/types/*": [
        "./types/*"
      ],
      "@/app/*": [
        "./app/*"
      ],
      "@/providers/*": [
        "./app/providers/*"
      ],
      "@/services/*": [
        "./app/services/*"
      ],
      "@/providers/core/*": [
        "./app/providers/core/*"
      ],
      "@/providers/lazy/*": [
        "./app/providers/lazy/*"
      ],
      "@/services/core/*": [
        "./app/services/core/*"
      ],
      "@domains/*": [
        "./src/domains/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@infrastructure/*": [
        "./src/infrastructure/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "legacy_core",
    "legacy-design/figma-exports/**/*",
    "src/stores/**/*"
  ]
}
